@model WebApplication1.Models.MainSystem.MainSystemViewModel.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="login" data-lbg="blue">
    <!--ResetPassword-->
    <div class="l-block toggled" id="l-Reset">
        <div class="lb-header palette-Pink bg">
            <i class="zmdi zmdi-account-circle"></i>
            Hi there! Wanna Reset Your Password
        </div>
        <div class="lb-body">
            <form method="post">
                <input asp-for="Code" type="hidden" />

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <input asp-for="Email" type="email" class="input-sm form-control fg-input" />
                        <label class="fg-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <input asp-for="Password" type="password" class="input-sm form-control fg-input" />
                        <label class="fg-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <input asp-for="ConfirmPassword" type="password" class="input-sm form-control fg-input" />
                        <label class="fg-label">ReType Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn palette-Pink bg">Reset</button>
            </form>
        </div>
    </div>
</div>