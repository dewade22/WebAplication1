@model WebApplication1.Models.MainSystem.MainSystemViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<!-- Register -->
<div class="login" data-lbg="blue">
    <div class="l-block toggled" id="l-register">
        <div class="lb-header palette-Blue bg">
            <i class="zmdi zmdi-account-circle"></i>
            Create an account
        </div>

        <div class="lb-body">

            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" id="form-register">

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <input asp-for="UserName" class="input-sm form-control fg-input" id="register-username" required />
                        <!--<input type="text" class="input-sm form-control fg-input" id="register-username" required>-->
                        <label class="fg-label">User Name</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <input asp-for="Email" class="input-sm form-control fg-input" type="email" id="register-email" required />
                        <!--<input type="email" class="input-sm form-control fg-input" id="register-email" required>-->
                        <label class="fg-label">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <input asp-for="Password" type="password" class="input-sm form-control fg-input" id="register-password" required />
                        <!--<input type="password" class="input-sm form-control fg-input" id="register-password" required>-->
                        <label class="fg-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <input asp-for="ConfirmPassword" class="input-sm form-control fg-input" id="register-password" type="password" required />
                        <!--<input type="password" class="input-sm form-control fg-input" id="register-password2" required>-->
                        <label class="fg-label">ReType Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group fg-float">
                    <div class="fg-line">
                        <input asp-for="PhoneNumber" class="input-sm form-control fg-input" id="register-phone" />
                        <!--<input type="text" class="input-sm form-control fg-input" id="register-phone">-->
                        <label class="fg-label">Phone Number</label>
                    </div>
                </div>

                <button class="btn palette-Blue bg" type="submit">Create Account</button>
            </form>
            <div class="m-t-30">
                <a data-bg="teal" class="palette-Blue text d-block m-b-5" href="/Account/Login">Already have an account?</a>
                <a data-bg="purple" class="palette-Blue text" href="/Account/ForgotPassword">Forgot password?</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <!--Custom Scripts-->
    <partial name="_ValidationScriptsPartial" />
}