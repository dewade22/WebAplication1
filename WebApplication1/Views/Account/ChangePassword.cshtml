@model WebApplication1.Models.MainSystem.MainSystemViewModel.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="content">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Change Password<small> Change your account password</small></h2>
            </div>
            <div class="card-body">
                <div class="form-group card-padding">
                    <div class="row">
                        <div class="col-12">
                            <div class="col-md-3">

                            </div>
                            <div class="col-md-6">
                                <form id="change-password" method="post">
                                    
                                    <div class="input-group fg-float">
                                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                                        <div class="fg-line">
                                            <input asp-for="UserName" type="text" class="form-control" value="@ViewBag.UserName" disabled>
                                            <label class="fg-label">User Name<span class="text-danger">*</span></label>
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <br /><br />

                                    <div class="input-group fg-float">
                                        <span class="input-group-addon"><i class="zmdi zmdi-email"></i></span>
                                        <div class="fg-line">
                                            <input asp-for="Email" type="email" class="form-control" value="@ViewBag.Email" disabled />
                                            <label class="fg-label">Email<span class="text-danger">*</span></label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <br /><br />

                                    <div class="input-group fg-float">
                                        <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                                        <div class="fg-line">
                                            <input asp-for="OldPassword" type="password" class="form-control" />
                                            <label class="fg-label">Old Password<span class="text-danger">*</span></label>
                                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <br /><br />

                                    <div class="input-group fg-float">
                                        <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                                        <div class="fg-line">
                                            <input asp-for="NewPassword" type="password" class="form-control" />
                                            <label class="fg-label">New Password<span class="text-danger">*</span></label>
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <br /><br />

                                    <div class="input-group fg-float">
                                        <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                                        <div class="fg-line">
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                            <label class="fg-label">Confirm Password<span class="text-danger">*</span></label>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <br /><br />

                                    <button type="submit" class="btn palette-Light-Blue bg waves-effect">Change</button>

                                </form>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>